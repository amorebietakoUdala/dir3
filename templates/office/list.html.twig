{% extends 'base.html.twig' %}

{% block title %}{{ 'title.office.search' | trans }}{% endblock %}

{% block body %}
	{{ include('office/searchFilter.html.twig') }}

   <div class="container-fluid">
      {% if offices is defined %}
         {% if offices|length > 0 %}
      <table id="taula" class="table">
      <thead>
            <tr>
               <th data-sortable="true">{{ 'office.code' | trans }};{{ 'office.unitCode' | trans }}</th>
               <th data-sortable="true">{{ 'office.provinceDescription' | trans }}</th>
               <th data-sortable="true">{{ 'office.description' | trans }}</th>
               <th data-sortable="true">{{ 'office.unitDescription' | trans }}</th>
            </tr>
      </thead>
      <tbody>
      {% for office in offices %}
            <tr>
               <td>{{ office.code }};{{ office.unitCode }}</td>
               <td>{{ office.provinceDescription }}</td>
               <td>{{ office.description }}</td>
               <td>{{ office.unitDescription }}</td>
            </tr>
      {% endfor %}
      </tbody>
      </table>
      {% else %}
         <div class="container alert alert-info m-2 text-center">
            {{'message.no_records' | trans }}
         </div>
      {% endif %}
   {% endif %}
   </div>
{% endblock %}

{% block stylesheets %}
   {{ parent() }}
   {{ encore_entry_link_tags('office_list') }}
{% endblock %}

{% block javascripts %}
   {{ parent() }}
   {{ encore_entry_script_tags('office_list') }}
{% endblock %}
